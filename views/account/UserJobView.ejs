<div>
    <% if(rs.length > 0) { %>
    <table border="1">
        <!-- &nbsp is HTML syntax for a space it stands for non break space -->
        <tr><th>User Name</th><th>Company Name</th><th>Job Description</th></tr>
        <% for (var i=0; rs.length > i; i++) { %>
        <tr>
            <td><a href="/accounts/?user_id=<%= rs[i].user_id %>"> <%= rs[i].lname %>, <%= rs[i].fname %></a></td>
            <td><a><%= rs[i].company_name %></a></td>
            <td><a><%= rs[i].job_name %></a></td>
        </tr>
        <% } %>
    </table>
    <% } else { %>
    No data in the User Job View.
    <% } %>

</div>


